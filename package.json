{
  "name": "requirements-tracker",
  "version": "0.1.2",
  "description": "Local requirements tracking tool",
  "author": "Matthew V. <scows-boil.26@icloud.com>",
  "main": "main.js",
  "private": true,
  "scripts": {
    "dev": "electron .",
    "start": "electron .",
    "build": "electron-builder",
    "postinstall": "electron-rebuild -f -w better-sqlite3"
  },
  "dependencies": {
    "better-sqlite3": "^11.5.0"
  },
  "devDependencies": {
    "electron": "^30.0.0",
    "electron-builder": "^24.9.1",
    "electron-rebuild": "^3.2.9"
  },
  "build": {
    "appId": "com.example.requirements-tracker",
    "productName": "Requirements Tracker",
    "icon": "icon.png",
    "files": [
      "**/*"
    ],
    "mac": {
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "target": [
        "nsis",
        "zip"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    }
  }
}
